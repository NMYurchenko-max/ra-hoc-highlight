  },
  "homepage": "https://github.com/NMYurchenko-max/ra-hoc-highlight#readme",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint \"src/**/*.ts?(x|js)\" --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint \"src/**/*.ts?(x|js)\" --ext .ts,.tsx,.js,.jsx --fix",
